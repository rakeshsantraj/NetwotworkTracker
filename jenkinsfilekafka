pipeline {
    agent any

    environment {
        COMPOSE_FILE = 'docker-compose.kafka.yml'
    }

    stages {
        stage('Start Kafka & Zookeeper') {
            steps {
                sh """
                docker compose -f ${COMPOSE_FILE} up -d
                """
            }
        }

        stage('Stop Kafka & Zookeeper') {
            steps {
                sh """
                docker compose -f ${COMPOSE_FILE} down
                """
            }
        }
    }
}
